    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "args": [
                "-r",
                "ts-node/register",
                "-r",
                "source-map-support/register",
                "--timeout",
                "99999999",
                "--colors",
                "${workspaceFolder}/**/*.test.ts"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/_mocha"
        }
    ]
}